{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "yasinya/client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "api",
            "image": "yasinya/api",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "yasinya/nginx",
            "hostname": "nginx",
            "essentail": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"]
        }
    ]
}
